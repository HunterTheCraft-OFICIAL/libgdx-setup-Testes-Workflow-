name: Generate libGDX Project Variants

on:
  push:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build-variants:
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false # Garante que se uma variante falhar, as outras continuem
      matrix:
        # LISTA DE VARIANTES (Deve corresponder aos nomes no VariantsCatalog.java)
        variant: 
          - only-desktop-basic
          - only-android-basic
          - mobile-basic
          - desktop-box2d-freetype
          - desktop-ashley-ai
          - all-all

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up JDK 8
      uses: actions/setup-java@v3
      with:
        java-version: '8'
        distribution: 'temurin'

    - name: Compile Setup Package
      run: |
        echo "Compiling HeadlessSetup and VariantsCatalog..."
        javac -cp publish/gdx-setup.jar $(find src/com/badlogic/gdx/setup -name "*.java")

    - name: Generate Variant (${{ matrix.variant }})
      run: |
        # Executa o setup usando a variante da matriz atual
        java -cp publish/gdx-setup.jar:src com.badlogic.gdx.setup.HeadlessSetup \
          --variant ${{ matrix.variant }} \
          --dir build-${{ matrix.variant }} \
          --name Game-${{ matrix.variant }} \
          --package com.tech.variant.${{ matrix.variant }} \
          --mainClass MainClass

    - name: Compress Variant Artifact
      run: |
        mkdir -p output
        cd build-${{ matrix.variant }}
        zip -r ../output/${{ matrix.variant }}.zip .
        cd ..

    - name: Upload Individual Variant
      uses: actions/upload-artifact@v4
      with:
        name: ${{ matrix.variant }}-project
        path: output/${{ matrix.variant }}.zip

  # Job opcional para consolidar tudo em um único release/artefato após o término da matriz
  consolidate:
    needs: build-variants
    runs-on: ubuntu-latest
    steps:
      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: all-variants

      - name: Create Final Bundle
        run: |
          mkdir -p final-release
          find all-variants -name "*.zip" -exec cp {} final-release/ \;
          cd final-release
          zip -r ../libgdx-complete-catalog.zip .
          
      - name: Upload Complete Catalog
        uses: actions/upload-artifact@v4
        with:
          name: libgdx-complete-catalog
          path: libgdx-complete-catalog.zip
