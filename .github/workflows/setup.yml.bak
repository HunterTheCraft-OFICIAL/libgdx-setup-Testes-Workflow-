name: Generate libGDX Project Variants

on:
  push:
    branches: [ "main", "master" ]
  workflow_dispatch:

jobs:
  build-variants:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up JDK 8
        uses: actions/setup-java@v4
        with:
          java-version: '8'
          distribution: 'temurin'

      - name: Compile Setup (Baseado no Log de Sucesso)
        run: |
          # Compila tudo dentro da pasta src para manter o vinculo de pacotes
          javac -cp publish/gdx-setup.jar $(find src/com/badlogic/gdx/setup -name "*.java")

      - name: Run Variant: Desktop
        run: |
          java -cp publish/gdx-setup.jar:src com.badlogic.gdx.setup.HeadlessSetup \
          --variant only-desktop-basic --dir out-desktop --name DesktopGame

      - name: Run Variant: Box2D
        run: |
          java -cp publish/gdx-setup.jar:src com.badlogic.gdx.setup.HeadlessSetup \
          --variant desktop-box2d-freetype --dir out-box2d --name Box2DGame

      - name: Archive All Results
        uses: actions/upload-artifact@v4
        with:
          name: libgdx-variants-bundle
          path: |
            out-desktop/
            out-box2d/